		public BillsBeans findByLanguageId(int languageId) {
			return null;
		}
		
		
		/**
		 * コネクションのクローズ処理
		 * 
		 * @throws SQLException
		 */
		public void close() throws SQLException{
			try {
				con.close();
			} catch (SQLException e) {
				con = null;
				throw e;
			}
		}
		
		/**
		 * コネクションのロールバック処理
		 * 
		 * @throws SQLException
		 */
		public void rollback() throws SQLException {
			try {
				con.rollback();
			} catch (SQLException e) {
				con = null;
				throw e;
			}
		}
		
